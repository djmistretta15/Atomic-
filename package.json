{
  "name": "atomic-clothing",
  "version": "0.1.0",
  "private": true,
  "description": "ATOMIC Clothing - Matter. Pattern. Purpose.",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "seed": "pnpm --filter db seed",
    "db:generate": "pnpm --filter db generate",
    "db:push": "pnpm --filter db push",
    "db:migrate": "pnpm --filter db migrate",
    "build:images": "node scripts/build-images.js",
    "gen:qr": "node scripts/generate-qr.js",
    "ingest:art": "node scripts/ingest-art.js",
    "deploy": "turbo deploy",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\""
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
